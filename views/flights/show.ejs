<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
  <div>Flight No:</div>
  <div>
    <%= flight.flightNo %>
    <a href="/flights/<%= flight._id %>/edit">
      <button>Edit Flight</button>
    </a>
  </div>
  <div>Airport</div>
  <%# add class = red if departure date has passed %>
  <div><%= flight.airport %></div>
  <div>Airline</div>
  <div><%= flight.airline %></div>
  <div>Flight No.</div>
  <div><%= flight.flightNo %></div>
  <div>Depart</div>
  <div><%= flight.departs.toISOString().slice(0,16).replace('T', ' ') %></div>
  <%# start food list %>
  <div>Food:</div>
  <ul>
    <% flight.food.forEach(foodItem => { %>
      <li><%= foodItem.name %></li>
    <% }) %>
  </ul>
  <%# end food list %>
</section>
  <h2>Ticket</h2>
  <form 
    id="add-ticket-form"
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
  <label for="seat-input">Seat:</label>
  <input type="text" name="seat" id="seat-input">
  <label for="price-input">Price:</label>
  <input type="number" name="price" id="price-input">
  <button type="submit">Add Ticket</button>
  </form>
  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <th>Seat</th>
        <th>Price</th>
      </thead>
      <tbody>
        <% flight.tickets.forEach(ticket => { %>
          <tr>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
            <td>
              <form action="/flights/<%= flight._id %>/reviews/<%= ticket._id %>?_method=DELETE" method="POST">
                <button>X</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <% } else { %>
      <h3>No Tickets Yet!</h3>
    <% } %>
</main>

<%- include('../partials/footer') %>