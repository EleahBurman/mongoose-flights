<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/index.css" />
<%- include('../partials/nav') %>

<main>
  <h1>Flight List</h1>
  <table id="list">
    <thead>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight No.</th>
      <th>Departure Date</th>
      <th>Departure Time</th>
      <th>Remove Flight</th>
    </thead>
    <tbody>
      <% flights.forEach((flight) => { %>
        <tr class = "<%= flight.departs < Date.now() ? "red" : '' %>">
          <td><%=flight.airline%></td>
          <td><%=flight.airport%></td>
          <td><%=flight.flightNo%></td>
          <td><%=flight.departs.toISOString().slice(0,16).replace('T', ' ')%></td>
          <td><a href="/flights/<%= flight._id %>">DETAILS</a></td>
          <td>
              <form action="/flights/<%= flight._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
          </td>
          </tr>
        <% }) %>
        </tbody>
  </table>
</main>

<%- include('../partials/footer') %>